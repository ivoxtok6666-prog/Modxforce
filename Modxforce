    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- 1. View Toggle Logic ---
            const gamesGrid = document.getElementById('gamesGrid');
            const gridViewBtn = document.getElementById('gridViewBtn');
            const listViewBtn = document.getElementById('listViewBtn');

            function setView(view) {
                if (view === 'list') {
                    gamesGrid.classList.remove('grid-view');
                    gamesGrid.classList.add('list-view');
                    listViewBtn.classList.add('active');
                    gridViewBtn.classList.remove('active');
                    localStorage.setItem('gameView', 'list');
                } else { 
                    gamesGrid.classList.remove('list-view');
                    gamesGrid.classList.add('grid-view');
                    gridViewBtn.classList.add('active');
                    listViewBtn.classList.remove('active');
                    localStorage.setItem('gameView', 'grid');
                }
            }
            const savedView = localStorage.getItem('gameView') || 'grid';
            setView(savedView); 
            gridViewBtn.addEventListener('click', () => setView('grid'));
            listViewBtn.addEventListener('click', () => setView('list'));

            // --- 2. Live Search Filter ---
            const searchInput = document.getElementById('gameSearch');
            const gameCards = gamesGrid.querySelectorAll('.game-card');

            searchInput.addEventListener('keyup', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                gameCards.forEach(card => {
                    const title = card.getAttribute('data-game-title').toLowerCase(); 
                    if (title.includes(searchTerm)) {
                        card.classList.remove('hidden');
                    } else {
                        card.classList.add('hidden');
                    }
                });
            });

            // Note: FAQ accordion script is omitted here for brevity but should be included for full functionality.
        });

        // --- 3. Modal Functions ---
        const downloadModal = document.getElementById('downloadModal');
        const modalGameTitle = document.getElementById('modalGameTitle');

        function openDownloadModal(gameTitle) {
            modalGameTitle.textContent = gameTitle;
            downloadModal.style.display = "block";
        }

        function closeDownloadModal() {
            downloadModal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target === downloadModal) {
                closeDownloadModal();
            }
        }

        /**
         * The core function that handles the download button click (Android or iOS).
         * This function now integrates the Content Locker redirection.
         */
        function startDownloadProcess(platform) {
            const gameTitle = modalGameTitle.textContent;
            
            // 1. Close the modal first
            closeDownloadModal();

            // ----------------------------------------------------
            // üéØ ŸÉŸàÿØ Content Locker ŸÖÿØŸÖÿ¨ ŸáŸÜÿß üéØ
            // ----------------------------------------------------
            const lockerBaseUrl = 'https://applocked.org/cl/i/d2vr3k';
            
            // ÿ•ÿ∂ÿßŸÅÿ© ÿßÿ≥ŸÖ ÿßŸÑŸÑÿπÿ®ÿ© ŸàŸÖŸÜÿµÿ© ÿßŸÑÿ™ÿ¥ÿ∫ŸäŸÑ ŸÉŸÖÿπŸÑŸÖÿßÿ™ ÿ™ÿ™ÿ®ÿπ (SubIDs)
            const trackingUrl = lockerBaseUrl + 
                                '?game=' + encodeURIComponent(gameTitle) + 
                                '&platform=' + platform;
            
            // ÿ•ÿπÿßÿØÿ© ÿ™Ÿàÿ¨ŸäŸá ÿßŸÑŸÖÿ≥ÿ™ÿÆÿØŸÖ ŸÑŸÅÿ™ÿ≠ ÿµŸÅÿ≠ÿ© Locker
            window.location.href = trackingUrl; 
            // ----------------------------------------------------
        }
    </script>
